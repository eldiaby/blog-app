{
	"compilerOptions": {
		"target": "ES2020",
		"module": "CommonJS",
		"rootDir": "./src",
		"outDir": "./dist",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"removeComments": true,
		"typeRoots": ["./node_modules/@types", "./src/@types"]
	},
	"include": ["src/**/*"],
	"exclude": [
		"node_modules",
		"vitest.config.ts",
		"src/**/*.spec.ts",
		"src/**/*.test.ts"
	]
}
